{
    "manifest_version": 2,

    "name": "Hackercut",
    "description": "Browse Hacker News with your keyboard!",
    "version": "0.1",
    "background" : {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["https://news.ycombinator.com/*"],
        "css": ["css/messi.min.css", "css/extension.css"],
        "js": ["js/lib/jquery-1.11.1.min.js", "js/lib/messi.min.js", "js/extension.js"],
        "run_at": "document_start"
    }],

    "icons" : {
        "16": "images/19x19.png",
        "48": "images/38x38.png"
    },

    "permissions": [
        "https://news.ycombinator.com/",
        "declarativeContent"
    ],
    
    "page_action": {
        "default_icon": "images/19x19.png"
    }
}